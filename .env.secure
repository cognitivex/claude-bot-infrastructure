# Claude Bot Infrastructure - SECURE Configuration Template
# Copy this file to .env and fill in your actual values
# WARNING: DO NOT commit .env to git - it contains sensitive secrets

# ============================================================================
# REQUIRED: API KEYS AND TOKENS (REPLACE WITH YOUR ACTUAL VALUES)
# ============================================================================

# Anthropic API Key for Claude Code
# Get from: https://console.anthropic.com/
# Format: sk-ant-api03-... (starts with sk-ant-api03)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitHub Personal Access Token
# Create at: https://github.com/settings/tokens
# Required scopes: repo, read:user, read:org, workflow
# Format: github_pat_... or ghp_...
GITHUB_TOKEN=your_github_token_here

# ============================================================================
# PROJECT CONFIGURATION
# ============================================================================

# Path to your target project (relative or absolute)
PROJECT_PATH=./workspace

# GitHub repository to monitor (owner/repo format)
# Example: microsoft/vscode, facebook/react
TARGET_REPO=owner/repository-name

# ============================================================================
# GIT CONFIGURATION
# ============================================================================

# Git commit information (will appear in commit messages)
GIT_AUTHOR_NAME=Your Full Name
GIT_AUTHOR_EMAIL=your.email@example.com
GIT_COMMITTER_NAME=Your Full Name
GIT_COMMITTER_EMAIL=your.email@example.com

# ============================================================================
# BOT BEHAVIOR (OPTIONAL - Defaults provided)
# ============================================================================

# GitHub label that triggers the bot (default: claude-bot)
BOT_LABEL=claude-bot

# Bot identifier for status reporting
BOT_ID=claude-orchestrator

# Check intervals (in minutes)
ISSUE_CHECK_INTERVAL=15
PR_CHECK_INTERVAL=30

# ============================================================================
# PLATFORM CONFIGURATION (OPTIONAL)
# ============================================================================

# Supported platforms (default: nodejs:18.16.0)
# Options: nodejs:18.16.0, dotnet:8.0, python:3.11
ENABLED_PLATFORMS=nodejs:18.16.0

# Auto-detect platforms from project files
AUTO_DETECT_PLATFORMS=true

# ============================================================================
# QUEUE AND PERFORMANCE (OPTIONAL)
# ============================================================================

# Queue type: file or redis (default: file)
QUEUE_TYPE=file

# Maximum concurrent workers (default: 3)
MAX_WORKERS=3

# Task timeouts (in seconds)
DISCOVERY_INTERVAL=10
PROCESSING_INTERVAL=2

# ============================================================================
# LOGGING AND DEBUG (OPTIONAL)
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# Enable debug mode (default: false)
DEBUG=false

# ============================================================================
# AZURE INTEGRATION (OPTIONAL - FOR ENTERPRISE)
# ============================================================================

# If using Azure Key Vault for secrets (leave commented if not using)
# AZURE_KEYVAULT_NAME=your-keyvault-name
# AZURE_CLIENT_ID=your-managed-identity-client-id
# AZURE_TENANT_ID=your-tenant-id
# AZURE_USE_MANAGED_IDENTITY=true

# Redis configuration (if using Redis queue)
# REDIS_URL=redis://localhost:6379/0

# Status web dashboard URL
# STATUS_WEB_URL=http://localhost:8080