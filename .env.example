# Claude Bot Infrastructure Configuration
# Copy this file to .env and configure for your project

# ============================================================================
# PROJECT CONFIGURATION
# ============================================================================

# Path to the project you want the bot to work on
# Can be relative (../my-project) or absolute (/path/to/project)
PROJECT_PATH=../KortoJura-App

# GitHub repository in owner/repo format
# If not set, bot will try to detect from git remote in PROJECT_PATH
TARGET_REPO=yourusername/your-repo

# ============================================================================
# MULTI-PLATFORM CONFIGURATION (NEW)
# ============================================================================

# Enabled platforms - comma-separated list of platform:version
# Examples:
#   Single platform: nodejs:18.16.0
#   Multi-platform: nodejs:18.16.0,dotnet:8.0,python:3.11
#   Auto-detect: auto (scans project for platform requirements)
ENABLED_PLATFORMS=nodejs:18.16.0

# Auto-detect platforms from project structure
# When true, scans for package.json, *.csproj, requirements.txt, etc.
AUTO_DETECT_PLATFORMS=true

# Environment profile (affects resource limits and capabilities)
# Options: minimal, standard, advanced, enterprise
ENVIRONMENT_PROFILE=standard

# Base Docker image for dynamic builds
BASE_IMAGE=ubuntu:22.04

# Platform-specific configurations
PLATFORMS_CONFIG=config/platforms.yml

# ============================================================================
# REQUIRED: API KEYS AND TOKENS
# ============================================================================

# Anthropic API Key for Claude Code
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitHub Personal Access Token for creating PRs and managing issues
# Needs: repo, workflow, write:packages permissions
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# ============================================================================
# GIT CONFIGURATION
# ============================================================================

# Git author information for commits made by the bot
GIT_AUTHOR_NAME=Your Name
GIT_AUTHOR_EMAIL=your.email@example.com
GIT_COMMITTER_NAME=Your Name  
GIT_COMMITTER_EMAIL=your.email@example.com

# ============================================================================
# BOT BEHAVIOR (Optional)
# ============================================================================

# GitHub label that triggers bot action on issues
BOT_LABEL=claude-bot

# How often to check for new issues (minutes)
ISSUE_CHECK_INTERVAL=15

# How often to check for PR feedback (minutes)
PR_CHECK_INTERVAL=30