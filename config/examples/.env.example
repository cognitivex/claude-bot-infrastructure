# Claude Bot Infrastructure Environment Configuration
# Copy this file to the root directory as .env and fill in your values

# Required: API Keys and Tokens
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GITHUB_TOKEN=your_github_personal_access_token_here

# Required: Repository Configuration  
TARGET_REPO=owner/repository-name

# Git Configuration
GIT_AUTHOR_NAME=Claude Bot
GIT_AUTHOR_EMAIL=claude-bot@example.com
GIT_COMMITTER_NAME=Claude Bot
GIT_COMMITTER_EMAIL=claude-bot@example.com

# Bot Configuration
BOT_LABEL=claude-bot
BOT_ID=claude-orchestrator

# Project Configuration
PROJECT_PATH=./workspace

# Optional: Advanced Settings
MAX_WORKERS=3
DISCOVERY_INTERVAL=10
PROCESSING_INTERVAL=2
ENABLED_PLATFORMS=nodejs:18.16.0

# Optional: Azure Key Vault (for enterprise deployments)
# AZURE_KEYVAULT_NAME=your-keyvault-name
# AZURE_CLIENT_ID=your-managed-identity-client-id
# AZURE_TENANT_ID=your-tenant-id

# Optional: Queue Configuration
QUEUE_TYPE=file
# REDIS_URL=redis://redis:6379/0

# Optional: Logging
LOG_LEVEL=INFO
DEBUG=false