# .NET Project Environment Variables
# Copy this to .env.dotnet and customize for your .NET project

# Required: API keys and tokens
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GITHUB_TOKEN=your_github_token_here

# .NET Project Configuration
DOTNET_PROJECT_PATH=/path/to/your/dotnet/project
DOTNET_TARGET_REPO=owner/dotnet-repo-name
DOTNET_BOT_LABEL=claude-bot

# Git Configuration
GIT_AUTHOR_NAME=Claude Bot
GIT_AUTHOR_EMAIL=claude-bot@example.com
GIT_COMMITTER_NAME=Claude Bot
GIT_COMMITTER_EMAIL=claude-bot@example.com

# Bot Behavior
ISSUE_CHECK_INTERVAL=15
PR_CHECK_INTERVAL=30

# .NET Specific Settings
DOTNET_ENVIRONMENT=Development
ASPNETCORE_ENVIRONMENT=Development
NODE_ENV=development