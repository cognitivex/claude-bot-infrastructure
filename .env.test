# Test Environment Configuration for Node.js Bot
# Copy this to .env for testing the default Node.js bot

# ============================================================================
# TEST PROJECT CONFIGURATION
# ============================================================================

# Path to the Node.js test project
PROJECT_PATH=./test-projects/nodejs-test

# GitHub repository (replace with your test repository)
TARGET_REPO=yourusername/nodejs-test-repo

# ============================================================================
# REQUIRED: API KEYS AND TOKENS (FILL THESE IN)
# ============================================================================

# Anthropic API Key for Claude Code
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitHub Personal Access Token
GITHUB_TOKEN=your_github_token_here

# ============================================================================
# GIT CONFIGURATION
# ============================================================================

GIT_AUTHOR_NAME=Claude Bot Test
GIT_AUTHOR_EMAIL=claude-bot-test@example.com
GIT_COMMITTER_NAME=Claude Bot Test
GIT_COMMITTER_EMAIL=claude-bot-test@example.com

# ============================================================================
# BOT BEHAVIOR (Test Settings)
# ============================================================================

# Use test-specific label
BOT_LABEL=claude-bot-test

# Faster intervals for testing
ISSUE_CHECK_INTERVAL=5
PR_CHECK_INTERVAL=10